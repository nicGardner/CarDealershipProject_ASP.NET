@model IEnumerable<CarDealership3.Models.model>

@{
    ViewBag.Title = "Index";
}

<h2>Models</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Type
        </th>
        <th>
            Engine Size
        </th>
        <th>
            Number Of Doors
        </th>
        <th>
            Colour
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleType.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.engineSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.colour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.modelId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.modelId })
        </td>
    </tr>
}

</table>
